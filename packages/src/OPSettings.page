error_reporting(E_ALL);
ini_set('display_errors', 'On');

class Plugin {
    private $name, $httpDir, $flashDir, $configFile, $verifiedOpVersion;

    public function __construct(){
        $this->name = 'simonlerpard.one.password.cli';
        $this->httpDir = sprintf('/usr/local/emhttp/plugins/%s', $this->name);
        $this->flashDir = sprintf('/boot/config/plugins/%s', $this->name);
        $this->configFile = sprintf('%s/config.json', $this->flashDir);
        $this->verifiedOpVersion = "2.25.3";
    }

    public function get($setting) {
        if (!property_exists($this, $setting)) throw new Exception("Invalid setting " . $setting );
        return $this->{$setting};
    }
}
$plugin = new Plugin();

require_once ($plugin->get('httpDir') . '/include/Config.php');
require_once ($plugin->get('httpDir') . '/include/OPInstaller.php');
require_once ($plugin->get('httpDir') . '/include/Html.php');

$errors = [];
try {
    $config = new Config($plugin->get('configFile'));
    $installer = new OPInstaller($config, $plugin);
    $latestOpVersion = $installer->getLatestVersion();
} catch (Exception $e) {
    printf('<div class="msg-box"><span class="error error-msg">Error: %s</span></div>', $e->getMessage());
    return;
}

try {
    $config->handlePostData();
    if (!empty($_POST["install"] ?? false)) {
        $installer->setup();
    }
    //$installer->setup();

    // handle_post_requests($plugin, $config);
    // No critical errors occured, now it's safe to save the config file to disk.
    $config->save();
} catch (Exception $e) {
    $errorHtml = sprintf('<span class="error error-msg">Error: %s</span>', $e->getMessage());
    array_push($errors, $errorHtml);
}
echo Html::getStyleElement().Html::resetPostPageScript().Html::getScripts();

?>
